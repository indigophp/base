<form action="" class="form-horizontal" method="post" role="form">
	<div class="panel panel-success">
		<div class="panel-heading">
			<div class="panel-title">User details</div>
		</div>
		<div class="panel-body">

			<fieldset>
				<legend>Basic details</legend>
				<div class="form-group">
					<label for="inputUsername" class="col-sm-2 control-label">Username</label>
					<div class="col-sm-10">
						<input name="username" type="text" class="form-control" id="inputUsername" placeholder="Username" required pattern="[a-zA-Z0-9-_.]+" title="Please only use letters, numbers, hyphens, underscores, and dots in a username.">
					</div>
				</div>
				<div class="form-group">
					<label for="inputEmail" class="col-sm-2 control-label">E-mail</label>
					<div class="col-sm-10">
						<input name="email" type="email" class="form-control" id="inputEmail" placeholder="E-mail" required>
					</div>
				</div>
				<div class="form-group">
					<label for="inputFullname" class="col-sm-2 control-label">Name</label>
					<div class="col-sm-10">
						<input name="fullname" type="text" class="form-control" id="inputFullname" placeholder="Full name" required>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-5">
						<input name="firstname" type="text" class="form-control" id="inputFirstname" placeholder="First name" required>
					</div>
					<div class="col-sm-5">
						<input name="lastname" type="text" class="form-control" id="inputLastname" placeholder="Last name" required>
					</div>
				</div>
				<div class="form-group">
					<label for="inputGroup" class="col-sm-2 control-label">Group</label>
					<div class="col-sm-10">
						<select name="group" id="inputGroup">
							{% for group in groups %}
							<option value="{{ group.id }}"{% if (group.id == default_group) %} selected="selected"{% endif %}>{{ group.name }}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword" class="col-sm-2 control-label">Password</label>
					<div class="col-sm-10">
						<input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password" required pattern=".{8,}" title="Password must be 8 characters long.">
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword2" class="col-sm-2 control-label">Confirm password</label>
					<div class="col-sm-10">
						<input name="password2" type="password" class="form-control" id="inputPassword2" placeholder="Confirm password" required pattern=".{8,}" title="Password must be 8 characters long.">
					</div>
				</div>
			</fieldset>

			<fieldset>
				<legend>Social</legend>
				<div class="form-group">
					<label for="inputTwitter" class="col-sm-2 control-label">Twitter account</label>
					<div class="col-sm-10 input-group">
						<span class="input-group-addon">@</span>
						<input name="twitter" type="text" class="form-control" id="inputTwitter" placeholder="Full name" pattern="^[A-Za-z0-9_]{0,15}$" title="You might have mistyped the Twitter username.">
					</div>
				</div>
			</fieldset>

		</div><!-- /.panel-body -->
		<div class="panel-footer">
				<button type="submit" class="btn btn-success">Save</button>

		</div>
	</div><!-- /.panel -->
</form>