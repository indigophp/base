{% extends 'layout.twig' %}

{% block title %}Profile of {{ model.fullname }} (@{{ model.username }}){% endblock %}

{% block content %}

<h2>{{ model.fullname }} <small>@{{ model.username }}, {{ model.group.name }}</small></h2>

<div class="row">
	<div class="col-sm-3">
		<img src="https://secure.gravatar.com/avatar/{{ model.email | md5 }}?s=200&amp;d=monsterid" alt="" class="img-thumbnail">
	</div>
	<div class="col-sm-9">
		<table class="table table-striped">
			<!-- <thead>
				<tr>
					<th>Field</th>
					<th>Value</th>
				</tr>
			</thead> -->
			<tbody>
				<tr>
					<th>Username</th>
					<td>{{ model.username }}</td>
				</tr>
				<tr>
					<th>E-mail</th>
					<td>{{ model.email }}</td>
				</tr>
				<tr>
					<th>Group</th>
					<td>{{ model.group.name }}</td>
				</tr>
				{% for meta in model.metadata %}
					{% if not meta.value is empty %}
						<tr>
							<th>{{ meta.key }}</th>
							<td>{{ meta.value }}</td>
						</tr>
					{% endif %}
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

{% endblock %}