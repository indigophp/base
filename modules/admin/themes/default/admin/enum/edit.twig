{% extends 'admin/layout.twig' %}

{% block title %}{% trans 'Edit enum' %}{% endblock %}

{% block content %}

<h2>{% trans 'Edit enum' %} <small>{% trans 'Edit enum details' %}</small></h2>

{% include 'admin/enums/form.twig' with { 'action': 'edit' } %}

{% endblock %}

{% block documentready %}
	$('#selectDefault').selectpicker();
	IndigoAdmin.addProxyButton('{% trans 'Save' %}', 'save', '#form-button-save');
{% endblock %}

{% if val.error_message() %}
	{% block error_flash %}
		<ul>
			{% for item in val.error_message() %}
				<li>{{ item }}</li>
			{% endfor %}
		</ul>
	{% endblock %}
{% endif %}
